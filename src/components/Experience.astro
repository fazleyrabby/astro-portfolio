---
import { getExperiences } from "../../lib/notion";
let experiences = [];
experiences = await getExperiences();
---

<!-- Experience Section -->
<section class="relative">
  <!-- Section Header -->
  <div class="mb-10">
    <span class="text-indigo-600 dark:text-indigo-400 text-sm font-semibold uppercase tracking-wider mb-2 block">Career</span>
    <h2 class="text-3xl md:text-4xl font-bold font-serif text-gray-900 dark:text-white">
      Work Experience
    </h2>
  </div>

  <!-- Timeline Container -->
  <div class="relative">
    <!-- Vertical Line - positioned absolutely -->
    <div class="absolute left-[7px] top-2 bottom-2 w-0.5 bg-gradient-to-b from-indigo-500 via-purple-500 to-indigo-300 dark:from-indigo-400 dark:via-purple-400 dark:to-indigo-600"></div>
    
    <!-- Experience Items -->
    <div class="space-y-8">
      {
        experiences.map((item, idx) => (
          <div class="relative flex gap-6">
            <!-- Timeline Dot -->
            <div class="relative z-10 flex-shrink-0">
              <div class="w-4 h-4 rounded-full bg-indigo-500 dark:bg-indigo-400 border-4 border-white dark:border-gray-900 shadow-lg shadow-indigo-500/30"></div>
            </div>
            
            <!-- Content Card -->
            <article class="flex-1 p-5 bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm border border-gray-200/50 dark:border-gray-700/50 transition-all duration-300 hover:shadow-lg hover:shadow-indigo-500/10 hover:border-indigo-200 dark:hover:border-indigo-800">
              <!-- Header -->
              <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2 mb-3">
                <div>
                  <h3 class="text-lg font-bold text-gray-900 dark:text-white">
                    <a
                      class="hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors"
                      href={item.link ?? "#"}
                      target="_blank"
                      rel="noreferrer"
                    >
                      {item.title}
                    </a>
                  </h3>
                  <p class="text-indigo-600 dark:text-indigo-400 font-medium text-sm">{item.role}</p>
                </div>
                <!-- Date Badge -->
                <span class="inline-flex items-center gap-1.5 px-3 py-1.5 text-xs font-semibold bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-indigo-900/40 dark:to-purple-900/40 text-indigo-600 dark:text-indigo-300 border border-indigo-100 dark:border-indigo-800/50 whitespace-nowrap">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  {item.from} - {item.to}
                </span>
              </div>
              
              <!-- Description -->
              <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed">
                {item.skills}
              </p>
            </article>
          </div>
        ))
      }
    </div>
  </div>
</section>
