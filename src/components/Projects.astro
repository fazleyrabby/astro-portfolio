---
import { Image } from "astro:assets";
import { projects } from "../../lib/static";
const { type } = Astro.props;
let data = projects;
if (type == "home") {
  data = projects.slice(0, 4);
}
---

<div
  class="hover-parent mx-auto space-y-6 lg:space-y-0 lg:gap-6 lg:grid lg:grid-cols-2"
>
  {
    data.map((item, index) => (
      // hover-child
      // hover:-translate-x-1
      //   hover:-translate-y-1
      //   hover:shadow-[6px_6px_0_1px_hsl(0,0%,60%)]
      // hover:shadow-md
      // hover:scale-105,dark:hover:shadow-slate-500
      // data-aos={!(index == 0 || index == 1) && (index % 2 == 0 ? 'fade-right': 'fade-left')}
      // data-aos-easing="ease-in-sine"
      // data-aos-offset="300"
      <div //bg-pattern
        class="hover:z-5
        transition-all max-lg:mx-auto"
      >
        <div //content
        class="bg-white max-w-lg mx-auto group card-gradient dark:outline dark:hover:outline-none"> 
          <a
            href={item.live || item.github || "#!"}
            target="_blank"
            rel="noreferrer "
            data-mdb-ripple="true"
            data-mdb-ripple-color="light"
            aria-label={`${item.title}`}
          >
            <Image
              src={item.thumbnail}
              class="object-cover object-left-top hover:animate-objtoright w-full lg:h-48 thumbnails"
              alt={item.title}
              width="100"
              height="100"
              loading="lazy"
              data-thumbnail={item.thumbnail}
              data-thumbnail-dark={item?.thumbnail_dark}
            />
          </a>
          <div class="px-3 py-2 dark:bg-black">
            <h2 class="text-gray-900 dark:text-gray-100 text-xl md:text-2xl font-bold mb-2">
              {item.title}
            </h2>
            <p class="text-gray-700 dark:text-gray-100 text-sm mb-4">
              {item.description}
            </p>
            <div class="flex space-x-2 flex-wrap">
              {item.tech?.map((each, index) => (
                <span class="px-3 py-1 mb-2 border rounded-sm text-slate-500 dark:text-gray-100 font-medium uppercase text-[11px]">
                  {each}
                </span>
              ))}
            </div>
          </div>
          <div class="flex space-x-2 flex-wrap pt-3 px-3 border-t border-t-slate-100 dark:bg-black">
            {item.live && <a class="transition flex-grow text-gray-900 hover:text-white border border-gray-200 hover:bg-gray-900 font-medium rounded-sm text-sm px-3 py-1.5 text-center mb-2 dark:border-gray-600 dark:text-white dark:hover:text-white dark:hover:bg-gray-700 grid place-content-center" target="_blank" href={item?.live}>Preview</a>}
            {item.github && <a class="transition flex-grow text-gray-900 hover:text-white border border-gray-200 hover:bg-gray-900  font-medium rounded-sm text-sm px-3 py-1.5 text-center mb-2 dark:border-gray-600 dark:text-white dark:hover:text-white dark:hover:bg-gray-700  grid place-content-center" target="_blank" href={item?.github}>Github</a> }
          </div>
        </div>
      </div>
    ))
  }
</div>

