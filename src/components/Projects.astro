---
import { Image } from "astro:assets";
import { getProjects } from "../../lib/notion";
let projects = [];
projects = await getProjects();
---

<!-- Projects Section -->
<section class="relative">
  <!-- Section Header -->
  <div class="mb-10">
    <span class="text-indigo-600 dark:text-indigo-400 text-sm font-semibold uppercase tracking-wider mb-2 block">Portfolio</span>
    <h2 class="text-3xl md:text-4xl font-bold font-serif text-gray-900 dark:text-white">
      Featured Projects
    </h2>
  </div>

  <!-- Projects Grid - consistent heights -->
  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    {
      projects.map((item, idx) => (
        <article class="group flex flex-col bg-white/80 dark:bg-gray-900/80 backdrop-blur-xl border border-gray-200/50 dark:border-gray-700/50 overflow-hidden transition-all duration-300 hover:-translate-y-1 hover:shadow-xl hover:shadow-indigo-500/10">
          <!-- Thumbnail -->
          <a
            href={item.live || item.github || "#"}
            target="_blank"
            rel="noreferrer"
            aria-label={item.title}
            class="block relative overflow-hidden aspect-video flex-shrink-0"
          >
            {item.thumbnail && (
              <>
                <Image
                  src={item.thumbnail}
                  class="object-cover object-left-top w-full h-full transition-transform duration-500 group-hover:scale-105"
                  alt={item.title}
                  width={600}
                  height={300}
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors duration-300" />
              </>
            )}
          </a>
          
          <!-- Content -->
          <div class="flex flex-col flex-grow p-5">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2 group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">
              {item.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm mb-4 line-clamp-2 flex-grow">
              {item.description}
            </p>
            
            <!-- Tech Stack -->
            <div class="flex gap-1.5 flex-wrap mb-4">
              {item.tech?.slice(0, 3).map((tech) => (
                <span class="py-0.5 px-2 text-[10px] font-medium uppercase tracking-wider bg-gray-100 dark:bg-gray-800 text-gray-500 dark:text-gray-400">
                  {tech}
                </span>
              ))}
              {item.tech?.length > 3 && (
                <span class="py-0.5 px-2 text-[10px] text-gray-400">
                  +{item.tech.length - 3}
                </span>
              )}
            </div>
            
            <!-- Actions -->
            <div class="flex gap-2 mt-auto">
              {item.live && (
                <a
                  class="flex-1 inline-flex items-center justify-center gap-1.5 py-2 text-xs font-semibold bg-indigo-600 text-white hover:bg-indigo-700 transition-colors"
                  href={item.live}
                  target="_blank"
                >
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                  Demo
                </a>
              )}
              {item.github && (
                <a
                  class="flex-1 inline-flex items-center justify-center gap-1.5 py-2 text-xs font-semibold border border-gray-200 dark:border-gray-700 text-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors"
                  href={item.github}
                  target="_blank"
                >
                  <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  Code
                </a>
              )}
            </div>
          </div>
        </article>
      ))
    }
  </div>
</section>
