---
import { Image } from "astro:assets";
import { projects } from "../../lib/static";
const { type } = Astro.props;
let data = projects
if(type == 'home'){
  data = projects.slice(0, 4)
}
---

<div
  class="hover-parent mx-auto space-y-6 lg:space-y-0 lg:gap-6 lg:grid lg:grid-cols-2"
>
  { data.map((item) => (
    // hover-child
    // hover:-translate-x-1 
    //   hover:-translate-y-1 
    //   hover:shadow-[6px_6px_0_1px_hsl(0,0%,60%)]
      <div class="hover:z-5 
      hover:shadow-md
      hover:scale-105
      dark:hover:shadow-slate-500
      transition-all">
        <div class="rounded-sm shadow-md transition-transform bg-white max-w-md overflow-hidden mx-auto">
          <a
            href={item.live || item.github || "#!"}
            target="_blank"
            rel="noreferrer "
            data-mdb-ripple="true"
            data-mdb-ripple-color="light"
            aria-label={`${item.title}`}
          >
            <Image
              src={item.thumbnail}
              class="object-cover object-left-top hover:animate-objtoright w-full lg:h-48 thumbnail"
              alt={item.title}
              width="100"
              height="100"
              loading="lazy"
              data-thumbnail={item.thumbnail}
              data-thumbnail-dark={item?.thumbnail_dark}
            />
          </a>
          <div class="p-3">
            <h2 class="text-gray-900 text-2xl font-bold mb-2">{item.title}</h2>
            <p class="text-gray-700 text-sm mb-4">{item.description}</p>
            <div class="flex justify-between space-y-2 flex-wrap">
              <div class="flex md:space-x-2  flex-wrap">
                {item.tech?.map((each) => (
                  <span class="px-3 py-1 mb-2 border rounded-sm text-slate-500 font-medium uppercase text-[11px]">
                    {each}
                  </span>
                ))}
              </div>
              <div class="flex">
                {item.github && (
                  <a
                    target="_blank"
                    href={item.github}
                    rel="noreferrer "
                    class="inline-flex mr-2"
                    title="Github"
                  >
                  <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="h-4 w-4 hover:scale-110" viewBox="0 0 16 16">
                    <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8"/>
                  </svg>
                  </a>
                )}
                {item.live && (
                  <a
                    target="_blank"
                    href={item.live}
                    rel="noreferrer "
                    title="Link"
                  >
                  <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="h-4 w-4 hover:scale-110" viewBox="0 0 16 16">
                  <path fill-rule="evenodd" d="M8.636 3.5a.5.5 0 0 0-.5-.5H1.5A1.5 1.5 0 0 0 0 4.5v10A1.5 1.5 0 0 0 1.5 16h10a1.5 1.5 0 0 0 1.5-1.5V7.864a.5.5 0 0 0-1 0V14.5a.5.5 0 0 1-.5.5h-10a.5.5 0 0 1-.5-.5v-10a.5.5 0 0 1 .5-.5h6.636a.5.5 0 0 0 .5-.5"/>
                  <path fill-rule="evenodd" d="M16 .5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h3.793L6.146 9.146a.5.5 0 1 0 .708.708L15 1.707V5.5a.5.5 0 0 0 1 0z"/>
                </svg>
                  </a>
                )}
              </div>
            </div>
          </div>
        </div>
      </div>
    ))
  }
</div>
