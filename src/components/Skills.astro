---
const skills = [
  "Docker", "Tailwind CSS", "Rest API", "Javascript", "Bootstrap", 
  "Laravel", "PHP", "Github", "Astro", "MySQL", "Markdown", "Netlify"
];
---

<!-- Skills Section -->
<section class="relative">
  <!-- Section Header -->
  <div class="mb-10">
    <span class="text-indigo-600 dark:text-indigo-400 text-sm font-semibold uppercase tracking-wider mb-2 block">Expertise</span>
    <h2 class="text-3xl md:text-4xl font-bold font-serif text-gray-900 dark:text-white">
      Skills & Technologies
    </h2>
    <p class="mt-3 text-gray-600 dark:text-gray-400 max-w-2xl">
      Technologies I work with to bring ideas to life.
    </p>
  </div>

  <!-- Skills Grid -->
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-3">
    {skills.map((skill, idx) => (
      <div 
        class="group relative p-4 bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm border border-gray-200/50 dark:border-gray-700/50 text-center transition-all duration-300 hover:-translate-y-1 hover:shadow-lg hover:shadow-indigo-500/10 hover:border-indigo-300 dark:hover:border-indigo-700"
        style={`animation-delay: ${idx * 0.05}s;`}
      >
        <span class="text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">
          {skill}
        </span>

        <!-- Hover accent line -->
        <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-indigo-500 to-purple-500 group-hover:w-full transition-all duration-300" />
      </div>
    ))}
  </div>
</section>
