---
import MainLayout from '../layouts/MainLayout.astro';
import Github from '../components/Icons/Github.astro';
import Youtube from '../components/Icons/Youtube.astro';
import Email from '../components/Icons/Email.astro';
import Codepen from '../components/Icons/Codepen.astro';
import Linkedin from '../components/Icons/Linkedin.astro';
import {Content as AboutMD} from '../components/about.md';
---
<MainLayout title="About">

	<main>
    <h1 class="text-4xl font-bold m-6 text-center">About Me</h1>
      
		<section class='markdown text-center mb-4'>
			<div class='prose dark:prose-invert w-full text-justify mr-0 ml-0 inline'>
			  <AboutMD/>
			</div>
		  </section>
		  <h3 class='mb-4'>Connect with me on</h3>
        <div class='flex gap-3 mb-6 icons'>
          <Github/>
          <Linkedin/>
          <Youtube/>
          <Email/>
          <Codepen/>
        </div>

      </main>
		

</MainLayout>