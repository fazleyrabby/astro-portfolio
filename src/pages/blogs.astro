---
import MainLayout from "../layouts/MainLayout.astro";
const posts = await Astro.glob("../pages/post/*.md");
posts.sort((a, b) => new Date(b.frontmatter.date).valueOf() - new Date(a.frontmatter.date).valueOf());
import moment from "moment";
---

<MainLayout title="Blogs">
	<div class="mb-4">
		<h1 class="text-4xl font-bold m-6 text-center">Blogs</h1>
		<div class="space-y-10">
			{
				posts.map((post) => (
					<div class="w-full lg:max-w-full lg:flex group cursor-pointer">
						<div class="blog-item space-y-2">
							<div>
								<a
									href={post.url}
									class="text-2xl font-bold mb-2 block capitalize group-hover:underline"
								>
									{post.frontmatter.title}
								</a>
							</div>
							<div>{moment(post.frontmatter.date).format('Y-MM-DD hh:mm:s')}</div>
							<div>
								<div class="text-sm">
									<a
										href={post.url}
										class="bg-black dark:bg-slate-100 dark:text-black dark:hover:text-black hover:text-slate-100 text-white text-xs py-2 px-3 rounded group w-max flex justify-center items-center"
									>
										<span>Read More</span>
										<span class="inline-block group-hover:translate-x-1 transition-transform ml-1">
											<svg
												xmlns="http://www.w3.org/2000/svg"
												width="16"
												height="16"
												fill="currentColor"
												class="bi bi-arrow-right-short"
												viewBox="0 0 16 16"
											>
												<path
													fill-rule="evenodd"
													d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8"
												/>
											</svg>
										</span>
									</a>
								</div>
							</div>
						</div>
					</div>
				))
			}
		</div>
	</div>
	<ul></ul>
</MainLayout>
