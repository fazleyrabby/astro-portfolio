---
import MainLayout from "@layouts/MainLayout.astro";
import { getCollection } from "astro:content";

const allResources = await getCollection("resources");

const sections = [
    { id: "php-laravel", title: "PHP & Laravel" },
    { id: "blogs-articles", title: "Blogs & Articles" },
    { id: "portfolios", title: "Portfolio & UI Inspirations" },
    { id: "javascript", title: "JavaScript" },
    { id: "youtube-tutorials", title: "Youtube & Tutorials" },
    { id: "miscellaneous", title: "Miscellaneous" },
];

const getResources = (id) => allResources.find((r) => r.id === id)?.data || [];
---

<MainLayout title="Resources">
    <main class="max-w-6xl mx-auto">
        <div class="mb-8">
            <h1
                class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-2"
            >
                Resources
            </h1>
            <p class="text-gray-600 dark:text-gray-400">
                A curated collection of helpful resources and inspirations
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {
                sections.map((section) => (
                    <div class="bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-lg p-6 border border-gray-200/50 dark:border-gray-700/50">
                        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
                            {section.title}
                        </h2>
                        <ul class="list-decimal list-inside space-y-2">
                            {getResources(section.id).map((item) => (
                                <li class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors">
                                    <a
                                        href={item.link}
                                        target="_blank"
                                        class="underline"
                                    >
                                        {item.text}
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </div>
                ))
            }
        </div>
    </main>
</MainLayout>
