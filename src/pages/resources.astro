---
import MainLayout from "@layouts/MainLayout.astro";
import {
    portfolios,
    phpLv,
    javascript,
    miscellaneous,
    youtubeChannels,
    externalArticles,
} from "lib/resources";
---

<MainLayout title="Resources">
    <main class="max-w-6xl mx-auto">
        <div class="mb-8">
            <h1
                class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-2"
            >
                Resources
            </h1>
            <p class="text-gray-600 dark:text-gray-400">
                A curated collection of helpful resources and inspirations
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div
                class="bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-lg p-6 border border-gray-200/50 dark:border-gray-700/50"
            >
                <h2
                    class="text-2xl font-bold text-gray-900 dark:text-white mb-4"
                >
                    PHP & Laravel
                </h2>
                <ul class="list-decimal list-inside space-y-2">
                    {
                        phpLv &&
                            phpLv.map((item, index) => (
                                <li class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors">
                                    <a
                                        href={item.link}
                                        target="_blank"
                                        class="underline"
                                    >
                                        {item.text}
                                    </a>
                                </li>
                            ))
                    }
                </ul>
            </div>

            <div
                class="bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-lg p-6 border border-gray-200/50 dark:border-gray-700/50"
            >
                <h2
                    class="text-2xl font-bold text-gray-900 dark:text-white mb-4"
                >
                    Blogs & Articles
                </h2>
                <ul class="list-decimal list-inside space-y-2">
                    {
                        externalArticles &&
                            externalArticles.map((item, index) => (
                                <li class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors">
                                    <a
                                        href={item.link}
                                        target="_blank"
                                        class="underline"
                                    >
                                        {item.text}
                                    </a>
                                </li>
                            ))
                    }
                </ul>
            </div>

            <div
                class="bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-lg p-6 border border-gray-200/50 dark:border-gray-700/50"
            >
                <h2
                    class="text-2xl font-bold text-gray-900 dark:text-white mb-4"
                >
                    Portfolio & UI Inspirations
                </h2>
                <ul class="list-decimal list-inside space-y-2">
                    {
                        portfolios &&
                            portfolios.map((item, index) => (
                                <li class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors">
                                    <a
                                        href={item.link}
                                        target="_blank"
                                        class="underline"
                                    >
                                        {item.text}
                                    </a>
                                </li>
                            ))
                    }
                </ul>
            </div>

            <div
                class="bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-lg p-6 border border-gray-200/50 dark:border-gray-700/50"
            >
                <h2
                    class="text-2xl font-bold text-gray-900 dark:text-white mb-4"
                >
                    JavaScript
                </h2>
                <ul class="list-decimal list-inside space-y-2">
                    {
                        javascript &&
                            javascript.map((item, index) => (
                                <li class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors">
                                    <a
                                        href={item.link}
                                        target="_blank"
                                        class="underline"
                                    >
                                        {item.text}
                                    </a>
                                </li>
                            ))
                    }
                </ul>
            </div>

            <div
                class="bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-lg p-6 border border-gray-200/50 dark:border-gray-700/50"
            >
                <h2
                    class="text-2xl font-bold text-gray-900 dark:text-white mb-4"
                >
                    Youtube & Tutorials
                </h2>
                <ul class="list-decimal list-inside space-y-2">
                    {
                        youtubeChannels &&
                            youtubeChannels.map((item, index) => (
                                <li class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors">
                                    <a
                                        href={item.link}
                                        target="_blank"
                                        class="underline"
                                    >
                                        {item.text}
                                    </a>
                                </li>
                            ))
                    }
                </ul>
            </div>

            <div
                class="bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-lg p-6 border border-gray-200/50 dark:border-gray-700/50"
            >
                <h2
                    class="text-2xl font-bold text-gray-900 dark:text-white mb-4"
                >
                    Miscellaneous
                </h2>
                <ul class="list-decimal list-inside space-y-2">
                    {
                        miscellaneous &&
                            miscellaneous.map((item, index) => (
                                <li class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors">
                                    <a
                                        href={item.link}
                                        target="_blank"
                                        class="underline"
                                    >
                                        {item.text}
                                    </a>
                                </li>
                            ))
                    }
                </ul>
            </div>
        </div>
    </main>
</MainLayout>
